<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:background="#314B58"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uniforme"
        android:textColor="#FFFFFF" />

    <Spinner
        android:id="@+id/spinnerUniformes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:popupBackground="#EB8F2B" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Quantidade a remover"
        android:textColor="#FFFFFF" />

    <Spinner
        android:id="@+id/spinnerQuantidadeRemove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:popupBackground="#EB8F2B" />

    <Button
        android:id="@+id/btnRemoveStock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#EB8F2B"
        android:text="Remover do Estoque"
        android:textColor="#FFFFFF" />

</LinearLayout>