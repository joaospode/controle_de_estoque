<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#314B58">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uniforme"
        android:textColor="#FFFFFF"/>

    <Spinner
        android:id="@+id/spinnerUniformes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:popupBackground="#EB8F2B"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantidade a remover"
        android:textColor="#FFFFFF"
        android:layout_marginTop="12dp"/>

    <Spinner
        android:id="@+id/spinnerQuantidadeRemove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:popupBackground="#EB8F2B"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnRemoveStock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remover do Estoque"
        android:textColor="#FFFFFF"
        android:backgroundTint="#EB8F2B"
        android:layout_marginTop="16dp"/>

</LinearLayout>