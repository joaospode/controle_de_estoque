<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    card:cardCornerRadius="8dp"
    android:layout_marginBottom="8dp"
    android:padding="12dp"
    app:ignore="NamespaceTypo">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/corner_radius"
        android:layout_marginBottom="@dimen/margin_standard"/>

    <LinearLayout
        android:padding="@dimen/padding_standard"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:id="@+id/tvFuncionario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FuncionÃ¡rio: Fulano"
            android:textStyle="bold"/>

        <TextView
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:id="@+id/tvUniforme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Uniforme: Camisa P"/>

        <TextView
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:id="@+id/tvQuantidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantidade: 2"/>

        <TextView
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:id="@+id/tvData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data: 2025-07-14"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
