<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutListaFuncionario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etFiltroNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#FFFFFF"
        android:hint="Filtrar por nome"
        android:inputType="textPersonName"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etFiltroSetor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#FFFFFF"
        android:hint="Filtrar por setor"
        android:inputType="text"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etFiltroData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#FFFFFF"
        android:hint="Filtrar por data de admissão (dd/mm/aaaa)"
        android:inputType="date"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvEmptyFuncionarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nenhum funcionário encontrado."
        android:textAlignment="center"
        android:visibility="gone"
        android:textColor="#FF0000"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFuncionarios"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>